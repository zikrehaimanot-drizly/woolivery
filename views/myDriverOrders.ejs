<!DOCTYPE HTML>
<html>
	<head>
		<title>WooLivery</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="css/main.css" />
		<noscript><link rel="stylesheet" href="css/noscript.css" /></noscript>
	</head>
	<body class="is-preload">
<section class="containerPage">


		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Header -->
					<header id="header">

						<a href="/generic" class="logo"><strong>Woo</strong> <span>Livery</span></a>
						<!-- <nav>
							<ul class="links">
								<li><a href="generic">Home</a></li>
							</ul>
						</nav> -->
					</header>
					</div>

				<!-- Contact -->
				<h2 class="driverId"><%= user._id%></h2>

					<h2 class="resName"> </h2>
					<input type="text" name="" value="" placeholder="why I drive" id="driverReason">
			 <section>

				<%  for(var i = 0 ; i < orders.length; i++){ %>
				<% if(orders[i].driverAccepted === true && orders[i].driverId == user._id && orders[i].delivered === false) {%>
				<div>
					<ul>
						<li><%= orders[i]._id %></li>
						<li><%= orders[i].customer %></li>
						<li><%= orders[i].orderedItem %></li>
						<li><%= orders[i].totalPrice %></li>

					</ul>
					<a  href="#"class="pickedUp">Picked-Up</a>
					<a href="#"class="delivered">Delivered</a>
				</div>
				<% } %>
				<% } %>

			</section>
				<br>
					<footer id="footer">
						<div class="inner">
							<ul class="icons">
								<li><a href="#" class="icon brands alt fa-twitter"><span class="label">Twitter</span></a></li>
								<li><a href="#" class="icon brands alt fa-facebook-f"><span class="label">Facebook</span></a></li>
								<li><a href="#" class="icon brands alt fa-instagram"><span class="label">Instagram</span></a></li>
								<li><a href="#" class="icon brands alt fa-github"><span class="label">GitHub</span></a></li>
								<li><a href="#" class="icon brands alt fa-linkedin-in"><span class="label">LinkedIn</span></a></li>
							</ul>
							<ul class="copyright">
							</ul>
						</div>
					</footer>

			</div>
			</section>
			<script type="text/javascript" src="driverUpdate.js">

			</script>

			<!-- Specific orders to the driver -->
	</body>
</html>
