<!doctype html>
<html>
<!-- links to all the files main css, bootstrap etc -->
<head>
  <title>21 Savage Fan Site</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container">

    <div class="page-header text-center">//Page title
      <h1><span class="fa fa-anchor"></span> Profile Page</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
      <!-- logout link -->
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6">
        <div class="well">
          <h3><span class="fa fa-user"></span> Local</h3>



        </div>
      </div>
      <div class="col-sm-6">
        <!--  -->
        <h3>Messages</h3>
        <ul class="messages">
          <% for(var i=0; i< orders.length; i++) {%> <!-- a for loop to go over the class="message" displaying the name, message, thumbUp, thumbDown and trashcan. In addition to any other feature you want to add-->

          <li class="message">
            <span><%= orders[i].name%></span>
            <span><%= orders[i].email %></span>
            <span><%= orders[i].review %></span>
            <span><%= orders[i].thumbUp -= orders[i].thumbDown %></span>
            <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
          <% } %>

        </ul>
<!--  -->

        <form action="/orders" method="POST">
          <input type="text" value="" name="name">
          <input type="text" placeholder="message" name="email">
          <input type="text" placeholder="message" name="review">
          <button type="submit">Submit</button>
        </form>
      </div>


    </div>
    <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
    <script src="main.js"></script>

</body>

</html>
